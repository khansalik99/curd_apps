<!-- ======= Header ======= -->
<header id="header" class="fixed-top header-scrolled">
  <div class="container-fluid d-flex align-items-center justify-content-between">

    <h1 class="logo"><a href="/">Absolute Music</a></h1>
    <!-- Uncomment below if you prefer to use an image logo -->
    <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

    <nav id="navbar" class="navbar">
      <ul>
        <% if(!isAuthenticated && isAuthenticated===false) { %>
          <li><a class="nav-link scrollto" href="/login">Login</a></li>
          <li><a class="nav-link scrollto " href="/registration">Register</a></li>
          <% } %>
          <% if(isAuthenticated && isAuthenticated===true && isAdmin && isAdmin === 'isUser') { %>
          <li><a class="nav-link scrollto" href="/dashboard">User Dashboard</a></li>
          <% } %>
          <% if(isAuthenticated && isAuthenticated===true && isAdmin && isAdmin === 'isAdmin') { %>
        <li><a class="nav-link scrollto" href="/admin/admin-dashboard">Admin Dashboard</a></li>
        <li><a class="nav-link scrollto" href="/admin/list-songs">All Songs</a></li>
        <li><a class="nav-link scrollto" href="/admin/add-category">Create Category</a></li>
        <li>  <form action="/logout" method="POST">
            <button style="background-color: rgb(10, 10, 10); color: rgb(247, 247, 247); font-size: larger;">Logout</button>
        </form></li>
      
        <% } %>
      </ul>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->

  </div>
</header>
