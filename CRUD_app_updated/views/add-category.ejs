<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation-menu.ejs') %>   
    
    <div class="container">
        <h1 class="text-center">Add New Category</h1>
        <% if (success !== '') { %> 
        <div class="alert alert-dismissible alert-success fade show text-center" role="alert"><%=  `${success}`%> </div>
        <% } %> 
        <div class="d-flex justify-content-center align-items-center">
            <form action="/user/add-category" method="post">
                                            
                <label>Category Name</label>
                <p><input type="text" class="form-control" name="title" ></p>
                <label>Category Description</label>
                <p><input type="text" class="form-control" name="description"></p>
                <p class="text-center"><button type="submit" class="btn btn-primary">Create</button></p>
          
            </div>
        </form>
        </div>   
        <!-- Go to All songs List -->
        <div class="text-center">
            <a class="btn btn-warning" href="/user/list-songs">All Songs</a>
        </div>
    </div>
  
<%- include('includes/end.ejs') %>