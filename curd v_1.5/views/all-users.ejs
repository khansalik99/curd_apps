<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation-menu.ejs') %>  
        <section class="dashboard-background">

            <div class="d-flex flex-column justify-content-md-center align-items-center vh-100">
                
                <h1 class="text-center">All Users</h1>
                <div class="text-center container my-3">
        <a class="btn-styled" style="background-color: rgb(193, 61, 219);" href="/admin-controls/add-user">Add New user</a>
    </div>
    <% if(users.length <= 0) {%>
        <h1>No user found</h1>
    <% } else {%>
        <div class="container">
            <div class="table-responsive-sm">

                <table class="table table-dark">
                    <thead>
                        <tr class="text-center">
            
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                
                        </tr>
                    </thead>
                    <tbody>
                        <% let i=0 %> 
                        <% for(let user of users)  {%>
                            <tr class="text-center">
                                <th  scope="row"><%= i=i+1 %> </th>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            </div>
    </div>
    <% } %>
</section>
    <%- include('includes/end.ejs') %>