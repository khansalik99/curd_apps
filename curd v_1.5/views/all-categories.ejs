<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation-menu.ejs') %> 
        <section class="dashboard-background">

            <div class="d-flex flex-column justify-content-md-center align-items-center vh-100">
                
    <h1 class="text-center">All Categories</h1>
    <div class="text-center container my-3">
        <a  class="btn-styled" style="background-color: rgb(193, 61, 219);" href="/admin/add-category">Add New Category</a>
    </div>
    <% if(categories.length <= 0) {%>
        <h1>No Category found</h1>
    <% } else {%>
        <div class="container">
            <div class="table-responsive-sm">

                <table class="table-dark table">
                    <thead>
                        <tr class="bg-info text-center">
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <!-- <th scope="col">Image URL</th>
                                <th scope="col" colspan="2">Controls</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% let i = 0; %> 
                        <% for(let category of categories)  {%>
                            <tr class="text-center">
                                
                                <td><%= i=i+1 %></td>
                                <td><%= category.title %></td>
                                <td><%= category.description %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    <% } %>
</section>
    <%- include('includes/end.ejs') %>